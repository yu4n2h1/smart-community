
.notice-list {
		width: 100vw;
}
.notice-item {
		width: calc(351rpx * 2);
		height: calc(101rpx * 2);
		border: 1px solid #e2e2e2;
		border-radius: calc(18rpx * 2);
		box-sizing: border-box;
		padding: 50rpx 30rpx;
		flex-shrink: 0;
		margin: 24rpx;
		font-family: 'Inter';
		font-style: normal;
		font-weight: 400;
		font-size: calc(14rpx * 2);
		line-height: calc(17rpx * 2);
		color: #333333;
}
.notice-item>text {
		display: block;
}
.notice-item text:nth-child(2) {
		display: flex;
		justify-content: space-between;
		color: #999999;
		font-family: 'Inter';
		font-style: normal;
		font-weight: 400;
		font-size: calc(12rpx * 2);
		line-height: calc(15rpx * 2);
		padding-top: 38rpx;
}
