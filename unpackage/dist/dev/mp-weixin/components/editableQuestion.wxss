
.item{
		width: 702rpx;
		min-height: 356rpx;
		background-color: #fff;
		box-shadow: 0 4px 15px 0 rgba(230, 228, 228, 0.52);
		display: flex;
		flex-direction: column;
		margin: 22rpx 0;
		border-radius: 10px;
		padding: 20rpx;
		box-sizing: border-box;
}
.item-descr{
		color: #98A1BB;
		font-size: 1rem;
		margin-left: 40rpx;
}
.data{
		padding: 20rpx 50rpx 0 40rpx;
}
.item-tit{
		display: flex;
		color: #333333;
		font-size: 1.1rem;
		margin: 10rpx;
		justify-content: space-between;
}
.item-tit-lft{
		display: flex;
}
.item-tit-rit{
		display: flex;
		position: relative;
}
.item-lst{
		width: 200rpx;
		position: absolute;
		top: 70rpx;
		right: 0rpx;
		overflow: scroll;
		z-index: 1;
		transition: 0.2s ease all;
		background-color: #fff;
}
.item-lst button{
		font-size: 0.8rem;
		width: 150rpx;
		color: #22CDEE;
		margin-top: 10rpx;
}
.data-label{
		display: flex;
		margin-bottom: 20rpx;
		justify-content: space-between;
}
.data-radio{
		border: 1px solid #d1d1d1;
		width: 28rpx;
		height: 28rpx;
		border-radius: 50%;
		margin-right: 10rpx;
}
.data-checkbox{
		border: 1px solid #d1d1d1;
		width: 28rpx;
		height: 28rpx;
		border-radius: 5rpx;
		margin-right: 10rpx;
}
